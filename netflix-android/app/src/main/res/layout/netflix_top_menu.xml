<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#121212"
    android:padding="10dp"
    android:paddingTop="35dp">

    <!-- ✅ Netflix Logo -->
    <ImageView
        android:id="@+id/netflix_logo"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/netflix_logo"
        android:src="@drawable/netflix"
        android:clickable="true"
        android:focusable="true" />

    <!-- ✅ Search Icon (Correcting Touch Target Size) -->
    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:contentDescription="@string/search_icon"
            android:src="@android:drawable/ic_menu_search" />
    </FrameLayout>

    <!-- ✅ Admin Button (Hidden by Default) -->
    <Button
        android:id="@+id/button_admin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/search_container"
        android:visibility="gone"
        android:backgroundTint="#FFD700"
        android:text="@string/admin_panel"
        android:textColor="#000000"
        android:textSize="12sp" />

    <!-- ✅ Exit Button -->
    <Button
        android:id="@+id/button_exit"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/button_admin"
        android:backgroundTint="#E50914"
        android:text="@string/exit"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>
